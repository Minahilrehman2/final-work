@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<LabelSlider Min="0" Max="99" @bind-CurrentValue="@currentCount"/>

@code {
    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
    }
}
